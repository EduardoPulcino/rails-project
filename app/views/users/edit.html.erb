<%= render "shared/header_profile" %>

<div class="container-show">
  <div class="header-my-data">
    <h1 class="titulo-perfil">MEU PERFIL</h1>
  </div>

  <div class="container-my-data">
    <div class="imagemUsuario">
      <%= image_tag(current_user.photo.present? ? url_for(current_user.photo) : "imgPerfil.png", alt: "img de perfil") %>

      <%= form_with(model: current_user, url: user_path(current_user), method: :patch, html: { multipart: true }, class: "form-upload-foto") do |f| %>
        <%= f.file_field :photo, accept: "image/*", class: "input-upload-foto", id: "upload-foto", style: "display: none;", onchange: "this.form.submit();" %>

        <%= f.label :photo, for: "upload-foto", class: "btn-upload-foto" do %>
          <%= image_tag "icons/edit.svg", size: "20x20" %>
        <% end %>
      <% end %>
    </div>

    <div class="infoUsuario">
      <%= form_with(model: current_user) do |f|%>
        <div class="inputsLados">
          <div class="controleInfo">
            <%= f.label :name, class: "input-show" %>
            <%= f.text_field :name, value: current_user.name, disabled: false, class: "inputBlock" %>
          </div>

          <div class="controleInfo">
            <%= f.label :phone, class: "input-show" %>
            <%= f.text_field :phone, value: current_user.phone, disabled: false, class: "inputBlock" %>
          </div>
        </div>

        <div class="inputsLados">
          <div class="controleInfo">
            <%= f.label :email, class: "input-show" %>
            <%= f.email_field :email, value: current_user.email, disabled: false, class: "inputBlock" %>
          </div>

          <div class="controleInfo">
            <%= f.label :budgets_quantity, class: "input-show" %>
            <%= f.text_field :budgets_quantity, value: current_user.budgets_quantity, disabled: true, class: "inputBlock" %>
          </div>
        </div>

        <div class="buttons">
          <%= link_to "Cancelar", user_path(current_user), class: "btn-default-bgTransparent-perfil", style: "margin-right: 10px" %>
          <%= f.submit "Salvar", class: "btn-default-bgRosa-perfil"  %>
        </div>
      <% end %>
    </div>
  </div>
</div>
