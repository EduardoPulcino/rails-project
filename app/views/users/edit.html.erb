<% if @user.errors.any? %>
	<% @user.errors.full_message.each do |error| %>
		<p> <%= error %> </p>
	<% end %>
<% end %>

<h1> Atualizar perfil </h1>

<%= form_for @user do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %><br />

	<%= f.label :email %>
	<%= f.text_field :email %><br />

	<%= f.label :password %>
	<%= f.text_field :password %><br />

	<%= f.label :phone %>
	<%= f.text_field :phone %><br />

	<%= f.label :photo %>
	<%= f.file_field :photo %><br />

	<%= f.submit 'Atualizar' %>
<% end %>