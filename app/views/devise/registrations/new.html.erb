<div class="container1-sign-up">
  <div class="containerBanner-sign-up">
    <%= render "shared/button_back" %>

    <div class="containerLogo-sign-up">
      <%= image_tag "Matriz (1).png", alt: "Logo Buffet", class: "logoBuffet" %>
    </div>
  </div>

  <div class="containerGeral-sign-up">
    <div class="container-sign-up">
      <h1 class="titulo-sign-up">CADASTRO</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true, class: "form-sign-up" }) do |f| %>

        <div class="containerInputs-sign-up">
          <%= f.label :name %>
          <%= f.text_field :name %>
          <%= field_error(resource, :name) %>

          <%= f.label :phone %>
          <%= f.telephone_field :phone,
                inputmode: "numeric",
                data: { controller: "mask" }
          %>
          <%= field_error(resource, :phone) %>

          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          <%= field_error(resource, :email) %>

          <%= f.label :password %>
          <%= f.password_field :password %>
          <%= field_error(resource, :password) %>

          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation %>
          <%= field_error(resource, :password_confirmation) %>
        </div>



        <div class="actions">
          <%= f.submit t(".create_account"), class: "btn-default-bgRosa" %>
        </div>
      <% end %>

        <div class="shared-link-sign-up">
          <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
</div>

